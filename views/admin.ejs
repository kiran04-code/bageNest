<%- include('./partials/header') %>

<div class="w-full min-h-screen flex bg-gray-100">
  <!-- Sidebar -->
  <div class="w-[20%] h-full bg-white shadow-md px-6 py-8">
    <h2 class="text-xl font-semibold mb-6 text-gray-700">Admin Panel</h2>
    <nav class="flex flex-col gap-4">
      <a class="text-gray-600 hover:text-blue-600 transition" href="">
        📦 All Products
      </a>
      <a class="text-gray-600 hover:text-green-600 transition" href="/creteproduct">
        ➕ Create New Product
      </a>
      <a class="text-red-500 hover:underline mt-8" href="">
        🗑️ Delete All
      </a>
    </nav>
  </div>

  <!-- Main Content -->
  <div class="w-[80%] p-10">
    <h1 class="text-2xl font-bold mb-8 text-gray-800">Products</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% products.forEach(function(product){ %>
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition duration-300">
        <!-- Product Image -->
        <div class="w-full h-48 rounded-t-xl overflow-hidden flex items-center justify-center bg-[<%= product.bgcolor %>]">
          <img class="h-[10rem] object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
        </div>

        <!-- Product Details -->
        <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] rounded-b-xl">
          <div>
            <h3 class="text-lg font-semibold"><%= product.name %></h3>
            <p class="text-sm">₹ <%= product.price %></p>
          </div>
          <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white hover:bg-gray-100 transition" href="">
            <i class="ri-add-line text-xl text-gray-700"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
