<%- include('./partials/header') %>

<% if (user && user.cart && user.cart.length > 0) { %>
    <% user.cart.forEach(element => { %>  <!-- Loop through cart items -->
        <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
            <div class="w-[30%] rounded-md overflow-hidden">
                <!-- Product Image -->
                <div class="w-full h-80 bg-yellow-500">
                    <img src="data:image/jpeg;base64,<%= element.image.toString('base64')%>" alt="">
                </div>
                
                <!-- Product Name, Quantity and Add/Remove Buttons -->
                <div class="w-full flex justify-between px-5 py-4">
                    <h3 class="text-2xl"><%= element.name %></h3> <!-- Display product name -->
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div> <!-- Quantity, could be dynamic -->
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>

                <!-- Net Total -->
                <div class="flex items-center justify-between px-5 py-3">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= element.price %></h2> <!-- Display product price -->
                </div>
            </div>

            <!-- Price Breakdown Section -->
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ 1920</h4> <!-- Static value, adjust dynamically if needed -->
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ 0</h4> <!-- Static value, adjust dynamically if needed -->
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4> <!-- Static value, adjust dynamically if needed -->
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4> <!-- Static value, adjust dynamically if needed -->
                    </div>
                </div>

                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ 1940</h3> <!-- Static value, adjust dynamically -->
                </div>
                <form action=""></form>
            </div>
        </div>
    <% }) %>
<% } else { %>
    <p>Your cart is empty.</p> <!-- If the cart is empty -->
<% } %>

<%- include('./partials/footer') %>
