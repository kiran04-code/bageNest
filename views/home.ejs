<!-- views/home.ejs -->
<%- include('partials/navbar') %>
<%- include('partials/header') %>

<!-- Featured Bags Section -->
<section class="py-20 bg-[#FFFDF7]">
  <div class="max-w-7xl mx-auto px-4 text-center">
    <h2 class="text-4xl font-extrabold text-[#A76545] mb-4 tracking-tight">Our Featured Bags</h2>
    <p class="text-[#5E4B3C] mb-12 text-lg">Find your perfect match from our handpicked stylish collection</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <% const bags = [
        {
          image: 'https://plus.unsplash.com/premium_photo-1678739395192-bfdd13322d34?w=600&auto=format&fit=crop&q=60',
          name: 'Classic Tote',
          price: '$99.99'
        },
        {
          image: 'https://images.unsplash.com/photo-1547949003-9792a18a2601?w=600&auto=format&fit=crop&q=60',
          name: 'Luxury Shoulder Bag',
          price: '$129.00'
        },
        {
          image: 'https://rukminim2.flixcart.com/image/612/612/xif0q/hand-messenger-bag/5/o/v/-original-imagrmc5rbsn7cwy.jpeg?q=70',
          name: 'Everyday Messenger',
          price: '$89.50'
        },
        {
          image: 'https://m.media-amazon.com/images/I/61egMfcDWlL._AC_UL480_QL65_.jpg',
          name: 'Compact Travel Bag',
          price: '$109.00'
        },
        {
          image: 'https://m.media-amazon.com/images/I/71ZP+ya-iGL._AC_UY327_QL65_.jpg',
          name: 'Trendy Backpack',
          price: '$119.99'
        },
        {
          image: 'https://m.media-amazon.com/images/I/71PRQKJNdHL._AC_UY327_QL65_.jpg',
          name: 'Elegant Clutch',
          price: '$79.99'
        }
      ]; %>

      <% bags.forEach(bag => { %>
      <div class="bg-white p-6 rounded-3xl border border-[#FFDF88] shadow-lg hover:shadow-2xl transition duration-300 group">
        <img src="<%= bag.image %>" alt="Bag" class="w-full h-52 object-contain rounded-xl mb-4 bg-[#FFFAF0] p-2">
        <h3 class="text-2xl font-bold text-[#A76545] tracking-wide mb-1 group-hover:text-[#FFA55D] transition">
          <%= bag.name %>
        </h3>
        <p class="text-[#6B6B6B] text-lg mb-4"><%= bag.price %></p>
        <a href="/shop" class="inline-block w-full text-center px-6 py-3 bg-gradient-to-r from-[#FFA55D] to-[#FF9F45] text-white rounded-full font-semibold shadow-md hover:opacity-90 transition">
          <i class="fas fa-shopping-bag mr-2"></i> Shop Now
        </a>
      </div>
      <% }); %>
    </div>
  </div>
</section>
<!-- Popular Brands Section -->
<section class="py-16 bg-[#FFFAF0] border-t border-[#FFE8B0]">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-[#A76545] mb-10 text-center">Popular Bag Brands</h2>
  
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Brand 1: Safari -->
        <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition border border-[#FFDF88] text-center">
          <img src="https://rukminim2.flixcart.com/image/612/612/xif0q/backpack/4/l/k/-original-imah6a5jq7wydtng.jpeg?q=70" alt="Safari Bags" class="h-52 mx-auto mb-4 object-contain rounded-xl">
          <img src="https://cdn.shopify.com/s/files/1/0651/0847/6121/files/select-logo2.png?v=1734520452" alt="Safari Logo" class="h-10 mx-auto">
        </div>
  
        <!-- Brand 2: Red Lemon -->
        <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition border border-[#FFDF88] text-center">
          <img src="https://m.media-amazon.com/images/I/61o3NqZ+13L._AC_UY327_QL65_.jpg" alt="Red Lemon Bags" class="h-52 mx-auto mb-4 object-contain rounded-xl">
          <img src="https://www.redlemon.com.mx/cdn/shop/files/LOGOTIPO_REDLEMON_160x92px_300dpi_copia.png?v=1665686618&width=330" alt="Red Lemon Logo" class="h-10 mx-auto">
        </div>
  
        <!-- Brand 3: Hornbull -->
        <div class="bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition border border-[#FFDF88] text-center">
          <img src="https://m.media-amazon.com/images/I/81I0ulzapDL._AC_UY327_QL65_.jpg" alt="Hornbull Bags" class="h-52 mx-auto mb-4 object-contain rounded-xl">
          <img src="https://www.brandbucket.com/sites/default/files/logo_uploads/250770/hornbull_0.png" alt="Hornbull Logo" class="h-10 mx-auto">
        </div>
      </div>
    </div>
  </section>
  
<%- include('partials/footer') %>
