<!-- views/signin.ejs -->
<%- include('partials/navbar') %>
<script src="https://cdn.tailwindcss.com"></script>
<div class="min-h-screen flex items-center justify-center bg-[#FFFDF7]">
  <div class="bg-white p-10 rounded-3xl shadow-2xl w-full max-w-md border border-[#E6E6FA]">
    <h2 class="text-4xl font-extrabold text-center text-[#A76545] mb-6">Sign In to BagNest</h2>
    <form action="/signin" method="POST" class="space-y-5">
      <input type="email" name="email" placeholder="Email Address" required 
             class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00C4FF] transition">
      
      <input type="password" name="password" placeholder="Password" required 
             class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-[#00C4FF] transition">
      
      <button type="submit" 
              class="w-full bg-gradient-to-r from-[#FF9F45] to-[#FF6B6B] hover:opacity-90 text-white py-3 rounded-xl font-semibold shadow-md transition-all duration-200">
        Sign In
      </button>
    </form>

    <p class="mt-6 text-center text-gray-600 text-sm">
      Don't have an account? 
      <a href="/signup" class="text-[#A76545] font-medium hover:underline">Sign up</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
